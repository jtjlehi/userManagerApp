extends layouts/layout

block bodyContent
    h1 User Manager Application
    table
        tr
            th Name
            th Email
            th Age
            th Edit
        each user in users
            tr
                td= user.userData.name.value
                td= user.userData.email.value
                td= user.userData.age.value
                td
                    a(href=`/edit/user?=${user.userData.id}`) edit
    button
        a(href='/add') + ADD USER +
